
<%= simple_form_for(@land) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :Districts %>
    <%= f.input :Geographical_Area %>
    <%= f.input :Forest %>
    <%= f.input :Barren_and_Unculturable_land %>
    <%= f.input :Non_Agriculture_Land_Area %>
    <%= f.input :Non_Agriculture_Perennial %>
    <%= f.input :Non_Agriculture_Temporary %>
    <%= f.input :Culturable_Waste_Land %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
